<div class="container">
  <legend>
    All users
  </legend>
  <table class="table table-responsive table-striped table-hover ">
    <thead>
      <tr>
        <th>Name</th>
        <th>Lastname</th>
        <th>Username</th>
        <th>Email</th>
        <th colspan="2">Actions</th>
      </tr>
    </thead>
    <tbody>
    <% _.each(users,function (user){ %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.lastname %></td>
        <td><%= user.username %></td>
        <td><a href="mailto:<%= user.email %>"><%= user.email %></a></td>
        <td><a class="btn btn-primary" href="/user/show/<%= user.id %>">Details</a></td>
        <td><a class="btn btn-danger" href="/user/destroy/<%= user.id %>">Delete</a></td>

      </tr>
    <% }
    ); %>
    </tbody>
  </table> 
</div>